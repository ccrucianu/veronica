              <% else %>
              <p><%= link_to t('.driver_call_to_action'), new_user_registration_path, {class: "btn btn-primary"} %></p>
              <% end %>
            </div> <!-- end of caption -->
          </div> <!-- end of thumbnail -->
        </div> <!-- end of user-card-home -->
