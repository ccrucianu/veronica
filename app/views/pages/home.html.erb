
<div class="banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0, 0, 0, 0.79)), url('<%= image_path "Car-driver.jpg" %>');">
  <div class="banner-content">
    <h1><%= t('.title') %></h1>
    <p><%= t('.subtitle') %> </p>
    <p><%= t('.slogan') %></p>
    <div class="cta">
      <%= link_to t('.passenger_call_to_action') , journeys_path, {class: "btn btn-primary"} %>
      <% if user_signed_in? && @user.cars.count != 0 %>
      <%= link_to t('.driver_call_to_action'), new_car_journey_path(@user.cars[0].id), {class: "btn btn-primary"} %>
      <% elsif policy(Car).create? %>
      <%= link_to t('.driver_call_to_action'), new_car_path, {class: "btn btn-primary"} %>
      <% else %>
      <%= link_to t('.driver_call_to_action'), new_user_registration_path, {class: "btn btn-primary"} %>
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper text-center" id="how-it-works">
