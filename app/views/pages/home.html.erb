          <%= image_tag "lift.jpg", class:"responsive-img" %>
            <h3><span>1</span></h3>
            <p><%= t('.step_one_explanation')%></p>
        </div> <!-- end of first  -->
      </div> <!-- end of col 2 -->

      <div class="col-xs-12 col-sm-4 text-center">
