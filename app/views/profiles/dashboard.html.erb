<div class="profile-wrapper">
  <div class="dashboard-wrapper padded">
    <div class="container">
      <div class="row">
        <div class="tabs">
          <a class="tab active" href="#" data-target="#overview">
            <h3>Overview</h3>
          </a>
          <a class="tab" href="#" data-target="#journey">
            <h3>Journeys</h3>
          </a>
          <a class="tab" href="#" data-target="#notifications">
            <h3>Notifcations</h3>
          </a>
          <a class="tab" href="#" data-target="#account-settings">
            <h3>Account settings</h3>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="content-wrapper">
      <div class="tab-content" id="overview">
        <%= render 'profiles/dashboard/overview' %>
      </div>
      <div class="tab-content hidden" id="journey">
        <%= render 'profiles/dashboard/journey' %>
      </div>
      <div class="tab-content hidden" id="notifications">
        <%= render 'profiles/dashboard/notifications' %>
      </div>
      <div class="tab-content hidden" id="account-settings">
        <%= render 'profiles/dashboard/account-settings' %>
      </div>
    </div>
  </div>
</div>

