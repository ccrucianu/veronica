<div class="row">
  <div class="col-xs-12 col-sm-4 hidden-xs">
    <div class="dashboard-card">
      <h2>Verification</h2>
      <div class="<%= @email_verification ? 'verified' : "unverified" %>" id="email"><p>Email verified</p></div>
      <div class="<%= @payment_verification ? 'verified' : "unverified" %>" id="payment"><p>Payment verified</p></div>
      <div class="<%= @student_id_verification ? 'verified' : "unverified" %>" id="student_id"><p>Student ID verifed</p></div>
      <div class="<%= @car_verification ? 'verified' : "unverified" %>" id="car"><p>Car verified</p></div>

      <h2>Journey stats</h2>
      <p><strong>No. of journeys driven:</strong> <%= @journeys_as_driver.count %></p>
      <p><strong>No. of journeys as passenger:</strong> <%= @journeys_as_passenger.count %></p>
      <p><strong>Avg. journey time:</strong></p>
      <h2>Preferences</h2>
      <p><strong>Music:</strong> <%= @user.music_habits %></p>
      <p><strong>Talking:</strong> <%= @user.speaking_habits %></p>
      <p><strong>Smoker:</strong> <%= @user.smoking ? "Yes" : "No" %></p>
    </div>
  </div>
  <div class="col-xs-12 col-sm-8">
    <div class="dashboard-card car-card text-center">
      <h2>Car details</h2>
      <% if @user.cars.empty? %>
        <p>You haven't uploaded your car details yet!</p>
        <%= link_to "Add your car detials", new_car_path, class: "btn btn-primary" %>
      <% else %>
        <% @user.cars.each do |car| %>
          <p><strong>Make:</strong> <%= car.make %></p>
          <p><strong>Model:</strong> <%= car.name %></p>
          <p><strong>Colour:</strong> <%= car.colour %></p>
          <p><strong>Licence:</strong> <%= car.vrn %></p>
        <% end %>
      <% end %>
    </div>
    <div class="dashboard-card review-card text-center">
      <h2>Reviews</h2>
      <% if @avg_rating.nil? %>
        <p>You haven't been reviewed yet!</p>
      <% else %>
        <p>Rating: <%= @avg_rating %> </p>
        <% @avg_rating.times do %>
          <%= image_tag "yellow-rating.png" %>
        <% end %>
        <% (5 - @avg_rating).times do %>
          <%= image_tag "empty-rating.png" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
