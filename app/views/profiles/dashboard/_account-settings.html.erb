<div class="row">
  <div class="col-xs-12">
    <div class="dashboard-card">
      <h2>Personal information</h2>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Phone number:</strong> <%= @user.phone_number %></p>
      <p><strong>Gender:</strong> <%= @user.gender %></p>
      <p><strong>DOB:</strong> <%= @user.date_of_birth.nil? ? "" : @user.date_of_birth.strftime("%m/%d/%Y") %></p>
      <%= link_to "Edit", edit_profile_path(@user), class: "btn btn-primary" %>

      <div class="divider"></div>

      <h2>University information</h2>
      <p><strong>Student ID:</strong> <%= @user.student_id %></p>
      <p><strong>Year of study:</strong> <%= @user.year_of_study %></p>
      <p><strong>Course:</strong> <%= @user.uni_course %></p>
      <%= link_to "Edit", edit_profile_path(@user), class: "btn btn-primary" %>

      <div class="divider"></div>

      <h2>Preferences</h2>
      <p><strong>Music:</strong> <%= @user.music_habits %></p>
      <p><strong>Speaking:</strong> <%= @user.speaking_habits %></p>
      <p><strong>Smoking:</strong> <%= @user.smoking ? "Yes" : "No" %></p>
      <%= link_to "Edit", edit_profile_path(@user), class: "btn btn-primary" %>

      <div class="divider"></div>

      <h2>Bio</h2>
      <p><strong>Description:</strong> <%= @user.description %></p>
      <%= link_to "Edit", edit_profile_path(@user), class: "btn btn-primary" %>
    </div>
  </div>
</div>
