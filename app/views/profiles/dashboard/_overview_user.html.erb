<div class="row">
  <div class="col-xs-12 col-sm-4 hidden-xs">
    <div class="dashboard-card">

      <h2 class="text-center" id="manual_info"><%= t('.summary') %></h2>

      <% if @journeys.nil? %>

      <p> <%= t('.no_bookings_yet') %> </p>

      <% else %>

      <div class="stats row">
        <div class="col-xs-4">
          <h3> <%= @journeys.count %> </h3>
          <p> bookings </p>
        </div>
        <div class="col-xs-4">
          <h3><%= @journeys.last.seats_available  %></h3>
          <p> Your kids </p>
        </div>
        <div class="col-xs-4">
          <h3> <%= @journeys.last.car.price_hour %>  </h3>
          <p> Last booking price per hour </p>
        </div>
      </div>

      <div class="stats">
        <div class="col-xs-4">
          <h3> <%= @ratings.count %> </h3>
          <p> number of reviews </p>
        </div>
      </div>

      <% end %>

    </div>
  </div>
  <div class="col-xs-12 col-sm-8 text-center" id="manual_info">

    <div class="dashboard-card review-card text-center">
      <h2>Reviews</h2>
      <% if @avg_rating.nil? %>
        <p><%= t('.no_reviews') %></p>
      <% else %>



        <p><%= t('.rating_html') %> <%= @avg_rating %> </p>
        <% @avg_rating.times do %>
          <%= image_tag "yellow-rating.png" %>
        <% end %>
        <% (5 - @avg_rating).times do %>
          <%= image_tag "empty-rating.png" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
