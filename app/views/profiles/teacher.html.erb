<% content_for :title, "#{@car[0].user.first_name}'" %>

<div style='background: #F2F2F2'>
  <div class="container">
    <div class="row">
      <div class="col-sm-5">
        <div>
          <%#= link_to "Book", new_profile_booking_path(@profile) , :class => "btn btn-success" %>
          <%= render 'profiles/teacher/teacher_profile' %>
        </div>
      </div>
      <div class="col-sm-7">
        <div class='dashboard-card car-card' id="manual_info">
          <%= render 'profiles/dashboard/overview_free_time' %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-10">
        <div class="dashboard-card">
          <div class="row">
            <div class="text-center">
              <div class="col-xs-3">
                <h3> <%= @journeys.count %> </h3>
                <p> bookings to date </p>
              </div>
              <div class="col-xs-3">
                <h3><%= @kids  %></h3>
                <p> Numbers of kids to date </p>
              </div>
              <div class="col-xs-3">
                <h3> <%= @avg_rating %></h3>
                <p>Average rating review  </p>
              </div>
              <div class="col-xs-3">
                <h3> <%= @ratings.count %> </h3>
                <p> number of reviews </p>
              </div>
            </div>
          </div>

          <hr class='hr-half'>

          <h4> <strong>Bio</strong> </h4>
          <p><%=  @car[0].bio  %></p>
          <br>
          <h4> <strong>Video</strong> </h4>
          <% if @car[0].video_URL != "" %>
          <h4> <%= @car[0].video_URL %>  </h4>
          <% elsif %>
          <p> <%= @car[0].user.first_name  %>  <%= t('.no_videos')%> </p>
          <% end %>
        </div>
      </div>

      <div class="col-xs-2">
        <br>
        <div>
         <%= link_to t('.book_me'), journey_path(@car[0]), :class => "btn btn-danger btn-block" %>
       </div>
       <br>

       <p class='fa fa-calendar'></p>
       <span> <%= l @car[0].created_at, format: :short %></span>
       <br>
       <p class='fa fa-comments'></p>
       <span><%= @comments.count %> <%= t('comments') %> </span>

       <hr class='hr-half'>


       <% if @car[0].user == current_user %>

        <%#= link_to "Delete ", profile_path(@profile), :class => "btn btn-danger",
              method: :delete,
              data: { confirm: "Are you sure?" } %>
              <%#= link_to "Edit ", edit_profile_path(@profile), :class => "btn btn-danger" %>
              <% end %>


              <div class="<%= @photo_verified ? 'verified' : "unverified" %>" id="photo">
                <p>
                  <%= t('.photo_verified')%>
                  <% if @photo_verified %>
                  <i class="fa fa-check"></i>
                  <% else %>
                  <i class="fa fa-close"></i>
                  <% end %>
                </p>
              </div>
              <div class="<%= @facebook_URL_verified ? 'verified' : "unverified" %>" id="facebook_URL">
                <p>
                  <%= t('.facebook_check')%>
                  <% if @facebook_URL_verified %>
                  <i class="fa fa-check"></i>
                  <% else %>
                  <i class="fa fa-close"></i>
                  <% end %>
                </p>
              </div>
              <div class="<%= @linkedin_URL_verified ? 'verified' : "unverified" %>" id="linkedin_URL">
                <p>
                  <%= t('.linkedin_check')%>
                  <% if @linkedin_URL_verified %>
                  <i class="fa fa-check"></i>
                  <% else %>
                  <i class="fa fa-close"></i>
                  <% end %>
                </p>
              </div>
              <div class="<%= @id_document_verified ? 'verified' : "unverified" %>" id="id_document">
                <p>
                  <%= t('.id_document_verified')%>
                  <% if @id_document_verified %>
                  <i class="fa fa-check"></i>
                  <% else %>
                  <i class="fa fa-close"></i>
                  <% end %>
                </p>
              </div>
              <div class="<%= @bank_verified ? 'verified' : "unverified" %>" id="bank">
                <p>
                  <%= t('.bank_verified')%>
                  <% if @bank_verified %>
                  <i class="fa fa-check"></i>
                  <% else %>
                  <i class="fa fa-close"></i>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-10">
             <%# if @reviews.length > 0 %>
             <div class="dashboard-card" >

              <h4> <strong> <%= t('.reviews') %> </strong> </h4>
              <% @passengers.each do |passenger| %>
              <ul >
                <li>
                  <% passenger.driver_rating.times do |i|  %>
                  <i class="fa fa-star" style="color:#cccc00;" aria-hidden="true"></i>
                  <% end %>
                  <% (5-passenger.driver_rating).times do |i|  %>
                  <i class="fa fa-star" aria-hidden="true"></i>
                  <% end %>


                </ul>
                <div class='media'>
                  <div class='pull-left'>
                    <% if passenger.user.photo? %>
                    <%= cl_image_tag passenger.user.photo.path, width: 60, height: 60, crop: :thumb, gravity: :face , class: "" %>
                    <% else %>
                    <% avatar_url = @user.facebook_picture_url || "http://placehold.it/60x60" %>
                    <%= image_tag avatar_url, width: 60, height: 60, crop: :thumb, gravity: :face, class: "avatar-xl text-center" %>
                    <% end %>

                  </div>
                  <div class='media-body'>
                    <div class='content staff'>
                      <div class='toolbar'>
                        <h4 class='title'>
                          <%= passenger.user.first_name %> <%= passenger.user.last_name %>
                          <span class='label label-contrast'>Staff</span>
                        </h4>
                      </div>
                      <p><%= passenger.driver_review %> </li> </p>
                      <p class='time'>
                        <%= l passenger.created_at, format: :short %>
                      </p>
                    </div>
                  </div>
                </div>
                 <% end %>
            </div>
           </div>
           </div>

            <div class="row">
              <div class="col-xs-10">
                <div id="map" style="width: 100%; height: 565px;">
                  <div class='dashboard-card'>
                   <%= render 'shared/map' %>
                   </div>
                </div>
              </div>
              </div>
            </div>


        </div>
      </div>




