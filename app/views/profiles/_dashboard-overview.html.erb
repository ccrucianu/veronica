 <div class="row">
  <div class="col-xs-12">
    <div class="overview-header">
      <% if @user.photo? %>
        <%= cl_image_tag @user.photo.path, class: "avatar-large header-img" %>
      <% else %>
        <%= image_tag "http://placehold.it", class: "avatar-large header-img" %>
      <% end %>
      <div class="header-info">
        <h3><%= @user.full_name %></h3>
        <%= link_to "View public profile", profile_path(@user) %>
      </div>
      <div class="header-progress">
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20"
          aria-valuemin="0" aria-valuemax="100" style="width:20%" id="account-progress">
            20% Complete
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-4 hidden-xs">
    <div class="overview-card">
      <h2>Verification</h2>
      <p>Email verification</p>
      <p>Payment verification</p>
      <p>Student ID verification</p>
      <p>Car verification</p>
      <h2>Journey stats</h2>
      <p>No. of journeys: </p>
      <p>Avg. journey time:</p>
      <p>Miles travelled: </p>
      <h2>Preferences</h2>
      <p>Music: </p>
      <p>Talking: </p>
      <p>Smoking: </p>
    </div>
  </div>
  <div class="col-xs-12 col-sm-8">
    <div class="overview-card car-card text-center">
      <h2>Car details</h2>
      <% if @user.cars.empty? %>
        <p>You haven't uploaded your car details yet!</p>
        <%= link_to "Add your car detials", new_car_path, class: "btn btn-primary" %>
      <% else %>
        <% @user.cars.each do |car| %>
          <p>Make: <%= car.make %></p>
          <p>Model: <%= car.name %></p>
          <p>Colour: <%= car.colour %></p>
          <p>Licence: <%= car.vrn %></p>
        <% end %>
      <% end %>
    </div>
    <div class="overview-card review-card text-center">
      <h2>Reviews</h2>
      <% if @avg_rating == 0 %>
        <p>You haven't been reviewed yet!</p>
      <% else %>
        <p>Rating: <%= @avg_rating %> </p>
        <% @avg_rating.times do %>
          <%= image_tag "yellow-rating.png" %>
        <% end %>
        <% (5 - @avg_rating).times do %>
          <%= image_tag "empty-rating.png" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
