<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
          <% @journey.passengers.each do |passenger| %>
            <div class="passenger-card">
              <% if passenger.user.photo? %>
                <%= cl_image_tag passenger.user.photo.path, class: "avatar-large" %>
              <% else %>
                <%= image_tag "http://placehold.it/200x200", class: 'avatar-large' %>
              <% end %>
              <h4><%= passenger.user.first_name %> <%=passenger.user.last_name %></h4>
              <p><%= passenger.user.description %></p>
              <p><%= passenger.user.music_habits %></p>
              <p><%= passenger.user.speaking_habits %></p>
              <p><%= passenger.user.smoking %></p>
            </div>
          <% end %>
      </div>
    </div>


    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <%= render 'map' %>
        </div>
        <div class="col-sm-6">
          <%= render 'map' %>
        </div>
      </div>
    </div>




</div>
