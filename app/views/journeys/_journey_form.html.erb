<%= simple_form_for [@car, @journey] do |f| %>
  <%= f.input :seats_available, label: I18n.t('number_of_students', default: 'Number of Students' ), input_html: { min: '1', max: '7', step: 'any' } %>
  <%= f.input :pick_up_time, label: I18n.t('class_starts_at', default: 'Class starts at' ), as: :datetime_picker %>
  <%= f.input :duration  %>
  <%= f.input :address, input_html: { class: :autocomplete } %>
  <%= f.button :submit, { class: "btn-primary wide-btn", style: "width: 100%", label: I18n.t('create_class', default: 'create_class' )} %>
<% end %>




