
<div class="wrapper">
  <div class="banner-content">
    <h1><%= @journey.pick_up_location.address%> to <%=@journey.drop_off_location.address %> at <%= @journey.pick_up_time.to_formatted_s(:time) %> </h1>
    <h2> Journey info </h2>
      <p> Seat(s) available : <%= @journey.seats_available - @journey.passengers.count %></p>
      <% @journey.passengers.each do |passenger| %>
        <p> <%= passenger.user.first_name %></p>
        <% if passenger.user.photo? %>
          <%= cl_image_tag passenger.user.photo.path, class: "avatar-large" %>
        <% else %>
          <%= image_tag "http://placehold.it/200x200", class: 'avatar-large' %>
        <% end %>
      <% end %>
    <h2> Driver info </h2>
      <p><%= @journey.car.user.description %></p>
      <p><%= @journey.user.music_habits %></p>
      <p><%= @journey.user.speaking_habits %></p>
      <p><%= @journey.user.smoking %></p>
    <h2> Car info </h2>
      <p><%= @journey.car.make %></p>
      <p><%= @journey.car.colour %></p>
    <%= link_to "See all my journeys", user_journeys_path, {class: "btn btn-primary" } %>
    <% if policy(Journey).update? %>
      <%= link_to "Edit this journey", edit_car_journey_path(@journey.car), { class: "btn btn-primary"}%>
    <% end %>
    <% if policy(Journey).destroy? %>
      <%= link_to "delete", journey_path(@journey), method: :delete  %>
    <% end %>
    <% if user_signed_in? %>
      <% if @journey.seats_available <= 0 %>
        <h3> Journey full </h3>
      <% elsif :on_journey? %>
          <h3> Already on this journey </h3>
      <% else %>
        <%= link_to "Book this journey", journey_passengers_path(@journey), method: :post, class: "btn btn-primary" %>
      <% end %>
    <% else %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "btn btn-primary"  %>
    <% end %>
  </div>
  <%= render 'map' %>
</div>


